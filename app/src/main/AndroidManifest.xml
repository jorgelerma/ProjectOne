<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.infos.root.projectone">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        <!-- Splash screen -->
        <activity
                android:name=".splash.presentation.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="http://jorgelerma.com/"
                    android:scheme="android-app-google-plus-demo" />
            </intent-filter>
        </activity>

        <!-- Movies activity -->
        <activity android:name=".movies.presentation.view.MoviesActivity" />

        <!-- Movie genre detail activity -->
        <activity android:name=".movies.presentation.view.MovieGenreDetailActivity" />
    </application>

</manifest>